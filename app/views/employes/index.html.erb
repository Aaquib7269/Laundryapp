  <section class="content-header" style="margin-bottom:30px">
          <h1>
            Manage Employe
            <small>Control panel</small>
          </h1>
          <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Dashboard</li>
          </ol>
        </section>

   <p id="notice"><%= notice %></p>
          <div class="row">
            <div class="col-xs-12">
              <div class="box" style="border-top:3px solid #6e5bb7" >
                <div class="box-header">
                 <div style="float:right">
                    <%= link_to  new_employe_path,class: "btn btn-success " do %>
                   <b style="color:white;font-size:15px">Add Employe</b>
                    <%end%>
                    </div>
                  <h3 class="box-title" style="float:left;margin-right:20px;color: #566573
;">Manage Employes</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                  <table id="example1" class="table table-bordered table-striped">
                    <thead>
                          <tr>
                            <th>Employe name</th>
                            <th>Employe's Designation</th>
                            <th>Employe no.</th>
                            <th>Employe address</th>
                            <th>Employe email</th>
                            <th>Status</th>
                            <th>Action</th>
                            </tr>
                        </thead>
                              <tbody>
                                  <% @employes.each do |employe| %>
                                            <tr>
                                              <td><%= employe.e_name %></td>
                                               <td><%= employe.designation.title %></td>
                                              <td><%= employe.e_no %></td>
                                             <td><%= employe.e_address %></td>
                                              <td><%= employe.e_email %></td>
                                              
                                              <td>
                                              <% if employe.is_active == true %>
                                            <%= link_to edit_employe_path(employe) do %>
                                            <button class = "btn btn-warning">Active&nbsp&nbsp&nbsp</button>
                                            <% end %>
                                            <%else%><%= link_to "Inactive",edit_employe_path(employe),class: "btn btn-warning"%>
                                            <%end%>

                                              </td>
                                              <td> 
                                             <div class="btn-group">
                                              <span class=" btn btn-info dropdown-toggle" data-toggle="dropdown" href="#menu1">Action
                                              <b class="caret"></b>
                                              </span>
                                           
                                              <ul class="dropdown-menu">
                                             <li><%= link_to 'Edit', edit_employe_path(employe) %></li>
                                            <li><%= link_to 'Destroy', employe, method: :delete, data: { confirm: 'Are you sure?' } %></li>
                                          </ul>
                                          </li> 
                                          </td>
                                          </div>
                                          </tr>
                                         <% end %>
                                        </tbody>

                                    </table>

                              </div><!-- /.box-body -->
                            </div><!-- /.box -->
                          </div><!-- /.col -->
                        </div><!-- /.row -->
                      </section><!-- /.content -->
                    </div>


 <script>
   $(function () {
      $("#example1").DataTable();
      $('#example2').DataTable({
        "paging": true,
        "lengthChange": false,
        "searching": false,
        "ordering": true,
        "info": true,
         "autoWidth": false
       });
    });
     $('.dropdown-toggle').dropdown()
     $('.dropdown-menu a 123').on('click', function(){    
    $('.dropdown-toggle').html($(this).html() + '<span class="caret"></span>');    
})
  </script>

