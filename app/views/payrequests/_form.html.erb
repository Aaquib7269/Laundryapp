<div class="col-md-9">
  <div class="box box-primary">
   <div class="box-body">

<%= form_for(@payrequest) do |f| %>
  <% if @payrequest.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@payrequest.errors.count, "error") %> prohibited this payrequest from being saved:</h2>

      <ul>
      <% @payrequest.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

              <div class="box-body">

                  <div class="form-group">
                    <%= f.label :Date %><br>
                    <div class="input-group">
                      <div class="input-group-addon">
                        <i class="fa fa-calendar"></i>
                      </div>
                       <%= f.text_field :Date, class: 'datepicker form-control reservation' %>
                    </div><!-- /.input group -->
                  </div><!-- /.form group -->


                  
                 
                   <div class="bootstrap-timepicker">
                    <div class="form-group">
                      <label>Time picker:</label>
                      <div class="input-group">
                        <div class="input-group-addon">
                          <i class="fa fa-clock-o"></i>
                        </div>
                         <%= f.text_field :Time, :class => 'timepicker form-control' %>
                      </div><!-- /.input group -->
                    </div><!-- /.form group -->
                  </div>
               
             
            <div class="form-group">
                <label>Select Customer Name:</label><br>
                <%= f.select :customer_id,Customer.where('is_active =  ?', true).collect{|e| [e.c_name,e.id,{},:class => 'form-control' ]} %>  <!--, {:prompt => 'Select Gender'}-->
              </div>

              <div class="form-group">
               <div class="field">
                  <%= f.check_box :is_active%>
                    &nbsp&nbsp<%= f.label :is_active %>
              </div>
              </div>

              <div class="box-footer">
               <%= f.submit class: "btn btn-primary" %>  
               <%= link_to 'Back',payrequests_path %>
              </div>
          
          <% end %> 
      </div>
   </div>
  </div>
</div>

<script>
            // When the document is ready
            $(document).ready(function () {
                $('.select').select2();
               $('.datepicker').pickadate()
                 $('.timepicker').timepicker({
                  showInputs: false
        });
      
            
            });
        </script>