    <section class="content-header" style="margin-bottom:30px">
          <h1>
            Manage Customer
            <small>Control panel</small>
          </h1>
          <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Dashboard</li>
          </ol>
    </section>
       <p id="notice"><%= notice %></p>
          <div class="row">
            <div class="col-xs-12">
              <div class="box" style="border-top:3px solid #6e5bb7">
                <div class="box-header">
                 <div style="float:right">
                    <%= link_to   new_customer_path,class: "btn btn-success " do %>
                    <b style="color:white;font-size:15px">Add Customer</b>
                    <%end%>
                    </div>
                  <h3 class="box-title" style="float:left;margin-right:20px;color: #566573
;">Manage Customers</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                  <table id="example1" class="table table-bordered table-striped">
                    <thead>
                          <tr>
                            <th>Customer name</th>
                            <th>Customer phoneno</th>
                            <th>Customer email</th>
                            <th>Address</th>
                            <th>Status</th>
                            <th>Action</th>
                            </tr>
                        </thead>
                              <tbody>
                                  <% @customers.each do |customer| %>
                                            <tr>
                                           <td><%= customer.c_name %></td>
                                            <td><%= customer.c_phoneno %></td>
                                            <td><%= customer.c_email %></td>
                                            <td><%= customer.address %></td>
                                              <td> 
                                              <% if customer.is_active == true %>
                                            <%= link_to  edit_customer_path(customer) do %>
                                            <button class = "btn btn-warning">Active&nbsp&nbsp&nbsp</button>
                                            <% end %>
                                            <%else%><%= link_to "Inactive",edit_customer_path(customer),class: "btn btn-warning"%>
                                            <%end%>
                                              </td>
                                              <td> 
                                             <div class="btn-group">
                                              <span class=" btn btn-info dropdown-toggle" data-toggle="dropdown" href="#menu1">Action
                                              <b class="caret"></b>
                                              </span>
                                           
                                              <ul class="dropdown-menu">
                                              <li><%= link_to 'Edit', edit_customer_path(customer) %></li>
                                              <li><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></li>
                                          </ul>
                                          </li> 
                                          </td>
                                          </div>
                                          </tr>
                                         <% end %>
                                        </tbody>

                                    </table>

                              </div><!-- /.box-body -->
                            </div><!-- /.box -->
                          </div><!-- /.col -->
                        </div><!-- /.row -->
                      </section><!-- /.content -->
                    </div>

 <script>
   $(function () {
      $("#example1").DataTable();
      $('#example2').DataTable({
        "paging": true,
        "lengthChange": false,
        "searching": false,
        "ordering": true,
        "info": true,
         "autoWidth": false
       });
    });
     $('.dropdown-toggle').dropdown()
     $('.dropdown-menu a 123').on('click', function(){    
    $('.dropdown-toggle').html($(this).html() + '<span class="caret"></span>');    
})
  </script>                    